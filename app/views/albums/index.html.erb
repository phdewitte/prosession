<div class="container-fluid">
  <% @albums.each do |album| %>
  <div class="album-container">
      <%= image_tag album.image %>
      <br>
      <%= link_to album.title, "#{album.uri}", class: 'spotify-link' %>
      <iframe src="https://embed.spotify.com/?uri=<%= album.uri %>" width="300" height="380" frameborder="0" allowtransparency="true" class="player"></iframe>
  </div>
  <% end %>
</div>
